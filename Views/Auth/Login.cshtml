@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div>
        <label>Login</label>
        <input type="text" name="login" required />
    </div>
    <div>
        <label>Senha</label>
        <input type="password" name="senha" required />
    </div>
    <div>
        <button type="submit">Authenticate</button>
    </div>

    @if (ViewBag.Erro != null)
    {
        <p style="color: red;">@ViewBag.Erro</p>
    }
</form>
